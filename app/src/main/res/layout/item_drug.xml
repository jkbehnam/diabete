<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_be_intelligent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/unselect_cardview"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="false"

        card_view:elevation="0dp">

        >

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
android:tint="@color/prof_text"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/previous_step" />

            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TableRow
                    android:gravity="right"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/menu_txt"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/tvMessageActivityMargin"
                        android:layout_marginRight="@dimen/tvMessageActivityMargin"

                        android:gravity="right|center"
                        android:text="اضطراب چیست؟"
                        android:textColor="@color/prof_text"
                        android:textSize="@dimen/list_title_text" />
                </TableRow>

                <TableRow
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/home_card_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tvMessageActivityMargin"
                        android:layout_marginRight="@dimen/tvMessageActivityMargin"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="متن پیام در یک خط به صورت پیش نمایش قرار می گیرد " />
                </TableRow>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
