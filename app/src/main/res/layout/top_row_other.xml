<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_top"

    android:orientation="vertical"
    style="@android:style/Animation.Translucent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="مقدار اندازه گیری شده"
                android:id="@+id/sp_value"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:paddingLeft="20dp"

                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="left|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="تاریخ اندازه گیری"
                android:id="@+id/sp_date"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/sp_day"
                android:layout_toStartOf="@+id/sp_day"

                android:paddingRight="20dp"

                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center_vertical|right" />

            TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="زمان"
                android:id="@+id/sp_day"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_weight="0.75"
                android:textSize="20dp" />
        </TableRow>
    </RelativeLayout>

</RelativeLayout>