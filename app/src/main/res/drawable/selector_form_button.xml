<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#ffc07c"></solid>
            <stroke android:color="#ffffff" android:width="1dp"></stroke>
            <corners android:radius="8sp" ></corners>
            <padding android:bottom="5sp" android:top="5sp" android:left="5sp" android:right="5sp"></padding>
        </shape>

    </item>
    <item android:state_pressed="false">

        <shape>
            <stroke android:color="#ffffff" android:width="1dp"></stroke>
            <corners android:radius="8sp" ></corners>
            <padding android:bottom="5sp" android:top="5sp" android:left="5sp" android:right="5sp"></padding>
        </shape>

    </item>
</selector>