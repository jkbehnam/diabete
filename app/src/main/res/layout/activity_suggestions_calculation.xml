<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/grey_5"
    tools:context=".bsh_suggestion_calculation">

    <include
        android:id="@+id/ansolin_calculation"
        layout="@layout/toolbar">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ansolin_calculation"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ScrollView

            android:id="@+id/scrollView6"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.codesgood.views.JustifiedTextView
                        android:justificationMode="inter_word"
                        android:id="@+id/textView35"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="این صفحه برای کودکان و خانم های باردار و افراد بالای 70 سال مناسب نمیباشد"
                        

                        android:textColor="@color/prof_text" />

                    <com.codesgood.views.JustifiedTextView
                        android:justificationMode="inter_word"
                        android:id="@+id/textView39"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="توصیه ها مخصوص افراد بالغ است جهت اطلاعات بیشتر به هوشیار باش قسمت انسولین مراجعه کنید"
                        
                        android:textColor="@color/prof_text" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:src="@drawable/dotted"
                        android:layerType="software" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <com.codesgood.views.JustifiedTextView
                            android:id="@+id/textView38"
                            android:justificationMode="inter_word"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- وعده های غذایی با مقدار ثابت و در زمان معين مصرف شود.\n
- در صورتی که ميزان انسولين را اصلاح کردید، حتما 2 ساعت بعد از تزريق،  قند خون را اندازه بگيريد تا مطمئن شوید کنترل شده است. خصوصا پس از اضافه کردن انسولين، مطمئن شويد دچار افت قند خون نشده ايد.
"
                            
                            android:textColor="@color/prof_text" />
                    </TableRow>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:src="@drawable/dotted"
                        android:layerType="software" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tx_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ی"
                            
                            android:textColor="@color/prof_text" />

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تاریخ امروز:"
                            
                            android:textColor="@color/prof_text" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:baselineAligned="false">

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <com.example.diabetes.name.MyEditText
                            android:id="@+id/et_age"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittx"
                            android:ems="10"
                            android:gravity="center_vertical|center"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="سن"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/prof_text" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:baselineAligned="false">

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <com.example.diabetes.name.MyEditText
                            android:id="@+id/et_weight"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittx"
                            android:ems="10"
                            android:gravity="center_vertical|center"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="وزن"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/prof_text" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:gravity="right">

                        <com.example.diabetes.name.MyTextView
                            android:id="@+id/tx_disease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#d7d7d7"
                            android:text="ندارم"
                            

                            android:textColor="@color/top_red" />

                        <com.example.diabetes.name.MyTextView
                            android:id="@+id/textView64"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="سابقه ی سایر بیماری ها را "
                            
                            android:textColor="@color/prof_text" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="right">

                        TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:text="مقادیر هدف در بیماری های پر خطر فرق دارد"
                        android:id="@+id/textView66"
                        android:textColor="@color/prof_text" /></TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">

                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Space
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_weight="1"

                            android:id="@+id/button_mohasebe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
android:textColor="@color/button_text"
                            android:background="@drawable/button_blue_gradiant"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="نمایش توصیه ها" />
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp">

                        <Spinner
                            android:id="@+id/sp_ansolin"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5" />

                        <TextView
                            android:id="@+id/textView74"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="نوع انسولین :"
                            
                            android:textColor="@color/prof_text" />
                    </TableRow>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView96"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"

                        android:background="@drawable/list_top"
                        android:padding="5dp"
                        android:text="توصیه های امروز بر اساس قند خون ديروز"
                        
                        android:textColor="@color/button_text" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/list_top"
                        android:padding="5dp"
                        android:text="توصیه های فردا بر اساس قند خون امروز "
                        
                        android:textColor="@color/button_text" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_tomorow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
