<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="8dp"></corners>
            <solid android:color="#ffc002"></solid>
            <stroke android:width="1dp" android:color="#837d6c"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp"></corners>
            <solid android:color="#837d6c"></solid>
            <stroke android:width="1dp" android:color="#e9e7e7"></stroke>
        </shape>
    </item>

</selector>