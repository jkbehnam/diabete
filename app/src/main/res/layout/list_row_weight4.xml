<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:background="@android:color/transparent"
android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    style="@android:style/Animation.Translucent">


    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="تاریخ : "
                android:id="@+id/textView13"
                android:textColor="#ffffff"
                android:visibility="gone" />

        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                >

                <TextView
                    android:layout_width="0dp"
                  android:layout_height="match_parent"
                    android:text="Medium Text"
                    android:id="@+id/list_weight"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:gravity="left|center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="وزن(kg) : "
                    android:id="@+id/textView18"
                    android:textColor="#ffffff"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="وارد نشده است!"
                    android:id="@+id/list_height"
                    android:textColor="#ffffff"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="left"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="نا معلوم"

                    android:id="@+id/list_situation"
                    android:textColor="#ffffff"
                    android:layout_weight="1"

                    android:visibility="visible"

                    android:autoText="false"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:layout_weight="1"
                    android:gravity="right"

android:paddingRight="20dp"                    android:id="@+id/list_date"
                    android:textColor="#ffffff" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="6dp"
                android:layout_marginTop="7dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="قد(cm) : "
                    android:id="@+id/textView20"
                    android:textColor="#ffffff"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="6dp"
                android:layout_marginTop="7dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="----"
                    android:id="@+id/list_bmi"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:background="@drawable/edittx"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" : BMI شاخص"
                    android:id="@+id/textView21"
                    android:textColor="#ffffff"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="6dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="وضعیت : "
                    android:id="@+id/textView24"
                    android:textColor="#ffffff"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</RelativeLayout>